   "source": [
    "score = 0\n",
    "total_score = 0\n",
    "persons = 0\n",
    "\n",
    "while True:\n",
    "    score = int(input(\"点数を入力してください：\"))\n",
    "    if score == -1:\n",
    "        break\n",
    "    total_score += score\n",
    "    persons +=1\n",
    "\n",
    "average_score = round(total_score / persons, 2)\n",
    "print(f\"{persons}人のテストの平均点は{average_score}点です\")"
   ]
  }
